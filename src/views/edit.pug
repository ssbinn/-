extends base.pug
include mixins/video.pug

block content 
    h4 Update Video
    form(method="POST") 
        input(name="title", type="text", value=video.title, placeholder=video.title, required)
        input(name="description", type="text", value=video.description, placeholder=video.description, required)
        input(name="hashtags", type="text", value=video.hashtags.join(), placeholder=video.hashtags.join(), required)
        input(type="submit", value="Save")